<% title t(:contributors) %>

<br><br><br>

<ul class="nav nav-tabs flex-column flex-xl-row">
  <li class="nav-item">
    <%= link_to t(:contributors), accounts_path, :class => "nav-link active" %>
  </li>
</ul>

<% if @accounts.empty? %>
  <br>
  <h3>Nenhum Usuário Registrado</h3>
<% else %>

  <br>
  <div class="row">
    <% @accounts.each do |account| %>
      <div class="col-sm-6" style="cursor: pointer;" onclick="window.location='<%= account_path(account) %>';">
        <div class="card">
          <br>
          <div  class="card-img-top thumbnail-mini"><%= link_to image_tag(account.photo.url(:medium)), account_path(account), alt: account.name, title: account.name %></div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to account.name, account_path(account) %></h5>
            <% if account_signed_in? %>
              <% if current_account.admin? or account.id == current_account.id %>
                <td><%= link_to t(:edit), edit_account_path(account), :class => 'btn btn-sm btn-success' %></td>
                <td><%= link_to t(:destroy), account_path(account), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-sm btn-danger' if account.id != 1 %></td>
              <% else %>
                <br><br>
              <% end %>
            <% end %>
          </div>
        </div><br>
      </div>
    <% end %>
  </div>

  <% if not params[:account_id] %>
    <div>
      <%= paginate @accounts %>
    </div>
  <% end %>
<% end %>
