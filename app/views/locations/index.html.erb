<% title t(:locations) %>

<%= link_to t("location.register_new_location"), new_location_path, :class => "btn btn-primary", :style => "float:right;" %>

<br><br><br>

<ul class="nav nav-tabs flex-column flex-sm-row">
  <li class="nav-item">
    <%= link_to t(:locations) + " #{ @account.blank? ? '' : '(' + @account.name.truncate(25) + ')' }", "#", :class => "nav-link active" %>
  </li>
</ul>

<% if @locations.empty? %>
  <br>
  <h2><%= t(:no_data_has_been_registered_so_far) %></h2>
<% else %>
  <br>

  <div class="row">
    <% @locations.each do |location| %>
      <div class="col-sm-6" style="cursor: pointer;" onclick="window.location='<%= location_url(location) %>';">
        <div class="card">
          <div  class="card-img-top thumbnail-mini"><%= link_to image_tag(location.imagem.url(:medium)), location_path(location), alt: location.name, title: location.name %></div>
          <div class="card-body"  style="min-height: 100px;">
            <h3 class="card-title"><%= link_to location.name.truncate(40), location_path(location) %></h3>
            <!-- <p class="card-text" style="text-align: center;"><b><%= @property_types.key(location.property_type) %></b></p> -->
            <p class="card-text" style="text-align: center;"><%= link_to "See all Practices", location_practices_path(location) if !location.practices.blank? %></p>
            <!--
            <% if account_signed_in? %>
              <% if current_account.admin? or location.account.id == current_account.id %>
                <td><%= link_to t(:edit), edit_location_path(location), :class => 'btn btn-sm btn-success' %></td>
                <td><%= link_to t(:destroy), location_path(location), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem Certeza?')) }, :class => 'btn btn-sm btn-danger' %></td>
              <% else %>
                <br><br>
              <% end %>
            <% end %>
            -->
          </div>
        </div>
        <br>
      </div>
    <% end %>
  </div>

  <% if not params[:account_id] %>
    <div>
      <%= paginate @locations %>
    </div>
  <% end %>
<% end %>
