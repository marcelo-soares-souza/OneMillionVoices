<style>
    .text-center {
        text-align: center;
    }

    .g-recaptcha {
        display: inline-block;
    }
</style>

<% title t(:sign_in) %>

<div class="sign_in_up">
  <%= image_tag ("signin.png"), width: 200 %>
  <br><br>
  <strong><%= t(:sign_in) %></strong>
  <div class="tip" style="text-align: center">Log in to continue registering your location and practices</div>
  <br>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), style: "form-floating") do |f| %>
    <div class="forms" style="padding-bottom: 10px">
      <div class="form-group col-xs-2 col-md-4 required bg-light">
        <%= f.label "E-Mail", class: "col-form-label-lg control-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control", :required => true, :autocomplete => "email" %>
      </div>

      <div class="form-group col-xs-2 col-md-4 required">
        <%= f.label t(:password), class: "col-form-label-lg control-label" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", :required => true, :autocomplete => "current-password"  %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %> <%= t(:remember_me) %>
          </label>
        </div>
      <% end -%>

      <div><%= recaptcha_tags %></div>

      <div class="actions">
        <%= button_tag(name: t(:sign_in), type: 'submit', class: "btn btn-primary", id: 'submit') do %>
          <span id="button_name"><%= t(:sign_in) %></span>
        <% end %>
      </div>
    </div>

    <%= render "devise/shared/links" %>
    <br>
    <div>
      <strong>All content on this platform is licensed under the</strong>
      <br>
      <%= link_to image_tag('CC.png', width: 120), 'https://creativecommons.org/licenses/by-nc-sa/4.0/', target: '_blank' %>
    </div>
  <% end %>
</div>