<style>
    .text-center {
        text-align: center;
    }

    .g-recaptcha {
        display: inline-block;
    }
</style>

<% title t(:sign_up) %>

<div class="sign_up">
  <%= image_tag ("signup.png"), width: 200 %>
  <br><br>
  <strong><%= t(:sign_up) %></strong>
  <div class="tip" style="text-align: center">Sign up and share your Agroecological Practices.</div>
  <br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { autocomplete: "off" }) do |f| %>
    <% if resource.errors.any? %>
      <div id="error_explanation">
        <b><%= resource.errors.count.to_s + " Error(s)" %></b>
        <br><br>
        <% resource.errors.full_messages.each do |message| %>
          <%= message %><br>
        <% end %><br>
      </div>
    <% end %>

    <div class="forms" style="padding-bottom: 10px">
      <div class="form-group col-xs-2 col-md-4 required bg-light">
        <%= f.label "E-Mail", class: "col-form-label-lg control-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control", :required => true, :autocomplete => "off" %>
        <div class="tip" style="text-align: center">We will use this to send you a confirmation E-mail.</div>
      </div>

      <div class="form-group col-xs-2 col-md-4 required bg-light">
        <%= f.label t(:name), class: "col-form-label-lg control-label" %>
        <%= f.text_field :name, class: "form-control", :required => true, :autocomplete => "off"  %>
        <div class="tip" style="text-align: center">Provide at least one name</div>
      </div>

      <div class="form-group col-xs-2 col-md-4 required bg-light">
        <%= f.label t(:password), class: "col-form-label-lg control-label" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", :required => true, :autocomplete => "off"  %>
        <div class="tip" style="text-align: center">Minimum is 8 characters</div>
      </div>

      <div class="form-group col-xs-2 col-md-4 required bg-light">
        <%= f.label t(:password_confirm), class: "col-form-label-lg control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", :required => true, :autocomplete => "off"  %>
        <div class="tip" style="text-align: center">Enter your password again</div>
      </div>
      <div class="tip_alert" style="text-align: center">You will receive an email with a link to confirm your registration.</div>

      <br>
      <div class="checkbox">
        <label>
          <%= f.check_box :i_agree_with_terms_and_conditions, {required: true}, true, false  %>
          <strong>I agree that my non-personal data shared on this website will be treated under the <%= link_to "Creative Commons license CC BY-NC-SA 4.0", "https://creativecommons.org/licenses/by-nc-sa/4.0/", target: "_blank" %>.</strong>
        </label>
      </div>

      <div><%= recaptcha_tags %></div>

      <div class="actions">
        <%= button_tag(name: t(:sign_up), type: 'submit', class: "btn btn-primary", id: 'submit', onSubmit: 'verifyTermOfUse()') do %>
          <span id="button_name"><%= t(:sign_up) %></span>
        <% end %>

      </div>
    </div>
    <%= render "devise/shared/links" %>
    <br>
    <div>
      <strong>All content on this platform is licensed under the</strong>
      <br>
      <%= link_to image_tag('CC.png', width: 120), 'https://creativecommons.org/licenses/by-nc-sa/4.0/', target: '_blank' %>
    </div>
    <br>
<% end %>
</div>
