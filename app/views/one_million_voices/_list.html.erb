<%= render 'layouts/dataTable' %>

<% title t(:one_million_voices) %>

<%= link_to t("location.register_new_location"), new_local_path, :class => "btn btn-primary", :style => "float:right;" %>

<br><br><br>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to t(:one_million_voices), "#", :class => "nav-link active" %>
  </li>
</ul>

<% if @one_million_voices.empty? %>
  <br>
  <h2><%= t(:no_data_has_been_registered_so_far) %></h2>
<% else %>

  <br>
  <div>
    <table id="dataTable-agroecologia" class="table table-striped table-bordered" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th></th>
        <th><%= t("one_million_voices") %></th>
        <th><%= t("summary_description") %></th>
        <th><%= t(:principles) %></th>
        <th><%= t(:gallery) %></th>
        <% if usuario_signed_in? %>
          <th class="list-control"></th>
          <th class="list-control"></th>
        <% end %>
      </tr>
      </thead>

      <tbody>
      <% @one_million_voices.each do |one_million_voice| %>
        <tr>
          <td scope="row"><div  class="thumbnail-mini"><%= link_to image_tag(one_million_voice.local.imagem.url(:medium)), local_one_million_voice_path(one_million_voice.local, '') %></div></td>
          <td><%= link_to truncate(one_million_voice.local.nome, length: 100), local_one_million_voice_path(one_million_voice.local, '') %></td>
          <td><%= truncate(one_million_voice.description, length: 100) %></td>
          <td><%= one_million_voice.principles if one_million_voice.principles %></td>
          <% total_midia = Midia.where(experiencia_agroecologica: one_million_voice.local.experiencia_agroecologicas).count + Midia.where(one_million_voice: one_million_voice).count%>
          <td><%= link_to total_midia, local_gallery_path(one_million_voice.local.id) %></td>

          <% if usuario_signed_in? %>
            <% if current_usuario.admin? or one_million_voice.local.usuario.id == current_usuario.id %>
<!--              <td><%#= link_to t(:edit), edit_local_path(local), :class => 'btn btn-sm btn-success' %></td>-->
<!--              <td><%#= link_to t(:destroy), local_path(local), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem Certeza?')) }, :class => 'btn btn-sm btn-danger' %></td>-->
            <% else %>
              <td></td>
              <td></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <script>$(document).ready(function () {
      dataTables();
  });</script>
<% end %>
