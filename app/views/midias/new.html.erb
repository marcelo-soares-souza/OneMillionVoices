<% if params[:saf_id] %>
  <% title "Add Photo To#{@saf.nome}" %>
<% elsif params[:experiencia_agroecologica_id] %>
  <% title "Add Photo to #{@experiencia_agroecologica.nome}" %>
<% elsif params[:one_million_voice_id] %>
  <% title "Add Photo to #{@one_million_voice.local.nome}" %>
<% end %>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <% if params[:saf_id] %>
      <%= link_to t(:safs), safs_path, :class => "nav-link" %>
    <% elsif params[:experiencia_agroecologica_id] %>
      <%= link_to t(:experience_in_agroecology), experiencia_agroecologicas_path, :class => "nav-link" %>
    <% end %>
  </li>

  <li class="nav-item">
    <% if params[:saf_id] %>
      <%= link_to @saf.nome, saf_path(@saf), :class => "nav-link" %>
    <% elsif params[:experiencia_agroecologica_id] %>
      <%= link_to @experiencia_agroecologica.nome, experiencia_agroecologica_path(@experiencia_agroecologica), :class => "nav-link" %>
    <% elsif params[:one_million_voice_id] %>
      <%= link_to "One Million Voices on " + truncate(@one_million_voice.local.nome, length: 10), one_million_voice_path(@one_million_voice), :class => "nav-link" %>
    <% end %>
  </li>

  <li class="nav-item">
    <% if params[:saf_id] %>
      <%= link_to "Photo (#{@saf.midias.count})", saf_midias_path, :class => "nav-link" %>
    <% elsif params[:experiencia_agroecologica_id] %>
      <%= link_to "Photo (#{@experiencia_agroecologica.midias.count})", experiencia_agroecologica_midias_path, :class => "nav-link" %>
    <% elsif params[:one_million_voice_id] %>
      <%= link_to "Photo (#{@one_million_voice.midias.count})", one_million_voice_midias_path, :class => "nav-link" %>
    <% end %>
  </li>

  <% if usuario_signed_in? %>
    <li class="nav-item">
      <% if params[:saf_id] %>
        <%= link_to "Send Photo", new_saf_midia_path, :class => "nav-link active" %>
      <% elsif params[:experiencia_agroecologica_id] %>
        <%= link_to "Send Photo", new_experiencia_agroecologica_midia_path, :class => "nav-link active" %>
      <% elsif params[:one_million_voice_id] %>
        <%= link_to "Send Photo", new_one_million_voice_midia_path, :class => "nav-link active" %>
      <% end %>
    </li>
  <% end %>
</ul>

<br>

<%= render 'form', midia: @midia %>
