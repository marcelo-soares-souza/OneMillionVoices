<% if params[:agroecological_practice_id] %>
  <% title t(:photo) + " #{@agroecological_practice.local.nome}" %>
<% end %>

<% if usuario_signed_in? %>
  <% if params[:agroecological_practice_id] %>
    <%= link_to t(:send_picture), new_agroecological_practice_midia_path, :class => "btn btn-warning", :style => "float:right;" if current_usuario.admin? or @agroecological_practice.usuario_id == current_usuario.id %>
  <% end %>
<% end %>

<br><br><br>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <% if params[:agroecological_practice_id] %>
      <%= link_to truncate(@agroecological_practice.local.nome, length: 16), agroecological_practice_path(@agroecological_practice), :class => "nav-link" %>
  <% end %>
  </li>

  <li class="nav-item">
    <% if params[:agroecological_practice_id] %>
      <%= link_to t(:gallery) + " (#{@agroecological_practice.midias.count})", agroecological_practice_gallery_path, :class => "nav-link", :style => "color: red !important" %>
    <% end %>
  </li>

  <li class="nav-item">
    <% if params[:agroecological_practice_id] %>
      <%= link_to t(:photos) + " (#{@agroecological_practice.midias.count})", agroecological_practice_midias_path, :class => "nav-link active" %>
    <% end %>
  </li>
</ul>

<% if @midias.empty? %>
  <br>

  <h3><%= t(:no_photo_submitted) %>
    <% if usuario_signed_in? %>
      <% if params[:agroecological_practice_id] %>
        <%= link_to t(:send_picture), new_agroecological_practice_midia_path(@agroecological_practice) if current_usuario.admin? or @agroecological_practice.usuario_id == current_usuario.id %>
      <% end %>
    <% end %>
  </h3>

<% else %>

  <br>
  <div>
    <table class="table table-striped table-bordered" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th></th>
        <th><%= t(:description) %></th>
        <% if usuario_signed_in? %>
          <th class="list-control"></th>
          <th class="list-control"></th>
        <% end %>
      </tr>
      </thead>

      <tbody>
      <% @midias.each do |midia| %>
        <tr>
          <% if params[:agroecological_practice_id] %>
            <td scope="row"><div class="thumbnail-mini"><%= link_to image_tag(midia.imagem.url(:medium)), agroecological_practice_midia_path(@agroecological_practice, midia) %></div></td>
            <td><%= link_to midia.descricao, agroecological_practice_midia_path(@agroecological_practice, midia) %></td>
          <% end %>

          <% if usuario_signed_in? %>
            <% if current_usuario.admin? or midia.usuario_id == current_usuario.id %>
              <% if params[:agroecological_practice_id] %>
                <td><%= link_to t(:edit), edit_agroecological_practice_midia_path(@agroecological_practice, midia), :class => 'btn btn-sm btn-success' %></td>
                <td><%= link_to t(:destroy), agroecological_practice_midia_path(@agroecological_practice, midia), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem Certeza?')) }, :class => 'btn btn-sm btn-danger' %></td>
              <% end %>
            <% else %>
              <td></td>
              <td></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>
