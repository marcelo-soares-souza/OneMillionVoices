<% if params[:practice_id] %>
  <% title "#{@midia.description} | #{@practice.name}" %>
<% end %>

<% if usuario_signed_in? %>
  <% if params[:practice_id] %>
    <%= link_to t(:send_picture), new_practice_midia_path, :class => "btn btn-warning", :style => "float:right;" if current_usuario.admin? or @practice.usuario_id == current_usuario.id %>
  <% end %>
<% end %>

<br><br><br>

<ul class="nav nav-tabs flex-column flex-sm-row">
  <li class="nav-item">
    <% if params[:practice_id] %>
      <%= link_to truncate(@practice.name, length: 25), practice_path(@practice), :class => "nav-link" %>
    <% end %>
  </li>

  <li class="nav-item">
    <% if params[:practice_id] %>
      <%= link_to t(:photo) + " (#{@practice.midias.count})", practice_midias_path, :class => "nav-link" %>
    <% end %>
  </li>

  <li class="nav-item">
    <% if params[:practice_id] %>
      <%= link_to truncate(@midia.description, length: 18), practice_midia_path(@practice, @midia.id), :class => "nav-link active" %>
    <% end %>
  </li>
</ul>

<br>

<div class="tab-content" style="min-height: 64px;">
  <div class="tab-pane active">
    <%= image_tag(@midia.imagem.url, :class => "midia-imagem") %>

    <br><br>
    <h3><%= @midia.description %></h3>
  </div>
</div>

<% if usuario_signed_in? %>
  <% if current_usuario.admin? or current_usuario.id == @midia.usuario_id %>
    <hr>
    <div class="form-actions">
      <% if params[:practice_id] %>
        <%= link_to t(:edit), edit_practice_midia_path(@practice, @midia), :class => 'btn btn-mini btn-success' %>
        <%= link_to t(:destroy), practice_midia_path(@practice, @midia), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you Sure?')) }, :class => 'btn btn-mini btn-danger' %>
      <% end %>
    </div>
  <% end %>
<% end %>
