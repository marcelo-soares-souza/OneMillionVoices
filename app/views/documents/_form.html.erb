<%= form_for_document params do |f| %>
  <% if document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(document.errors.count, "error") %> encontrado(s):</h2>

      <ul>
        <% document.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_account.admin? %>
    <div class="form-group row">
      <%= f.label t(:responsible_for_information), class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-10">
        <%= f.collection_select(:account_id, Account.all, :id, :name, {:selected => @selected_id }, { class: "form-control selectpicker", "data-live-search": true }) %>
      </div>
    </div>
  <% end %>
  <div class="forms">
    <div class="form-group row">
      <%= f.label t(:document), class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-8">
        <%= f.file_field :file, class: "form-control" %>
      </div>
    </div>
    <br>
    <div class="form-group row bg-light">
      <%= f.label t(:description), class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-10">
        <%= f.text_field :description,  class: "form-control" %>
      </div>
    </div>
  </div>
  <hr>
  <div class="actions">
    <%= f.submit t(:save), class: "btn btn-warning btn-lg" %>
  </div>
<% end %>

<% if not @documents.blank? and params["action"] == 'new'%>
  <br><br>
  <div>
    <table class="table table-striped table-bordered" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th><%= t(:file) %></th>
        <th><%= t(:description) %></th>
        <% if account_signed_in? %>
          <th class="list-control"></th>
        <% end %>
      </tr>
      </thead>

      <tbody>
      <% @documents.each do |document| %>
        <tr>
          <% if params[:practice_id] %>
            <td><%= link_to document.file.original_filename, document.file.url %></td>
            <td><%= document.description %></td>
          <% end %>

          <% if account_signed_in? %>
            <% if current_account.admin? or document.account_id == current_account.id %>
              <% if params[:practice_id] %>
                <td><%= link_to t(:destroy), practice_document_path(@practice, document), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem Certeza?')) }, :class => 'btn btn-sm btn-danger' %></td>
              <% end %>
            <% else %>
              <td></td>
              <td></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
    <br>
  <script>
      $(document).on('click', '[data-toggle="lightbox"]', function(event) {
          event.preventDefault();
          $(this).ekkoLightbox();
      });
  </script>
<% end %>
