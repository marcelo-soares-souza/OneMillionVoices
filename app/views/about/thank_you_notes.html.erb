<% title t(:thank_you_notes) %>
<style>
    .thank_you_notes {
        margin-left: auto;
        margin-right: auto;
        max-width: 900px;
        margin-top: 40px;
    }

    .logo {
        width: 220px;
        margin: auto;
        background-color: transparent;
    }

    .thank_you_notes .card {
        border: 0;
    }
</style>

<div class="thank_you_notes">
  <h1><%= t(:thank_you_notes) %></h1>
  <div class="text-box" style="line-height: 30px;">
    The <strong>One Million Voices</strong> platform is completely <a href="https://www.gnu.org/philosophy/free-sw.html" target="_blank">free and open source</a>.
    We would like to thank all the projects, artists and partners that contribute to the One Million Voices platform.
  </div>

  <br><br>

  <div class="row">
    <div class="col-sm-4" >
      <div class="card" style="min-height: 200px">
        <div class="logo"><%= link_to image_tag("agroecologymap.png", width: "180px", alt: "Agroecology Map Logo", title: "Agroecology Map Logo"), "https://agroecologymap.org", :target => "_blank", :alt => "Agroecology Map Logo", :title => "Agroecology Map Logo" %></div>
      </div>
    </div>

    <div class="col-sm-4" >
      <div class="card" style="min-height: 200px">
        <div class="logo"><%= link_to image_tag("tpp.jpg", width: "180px", alt: "The Transformative Partnership Platform on Agroecology", title: "The Transformative Partnership Platform on Agroecology"), "https://glfx.globallandscapesforum.org/topics/21467/page/TPP-home", :target => "_blank", :alt => "Agroecology Map Logo", :title => "The Transformative Partnership Platform on Agroecology" %></div>
      </div>
    </div>

    <div class="col-sm-4" >
      <div class="card" style="min-height: 200px">
        <div class="logo"><%= link_to image_tag("rails.png", width: "180px", alt: "Ruby on Rails", title: "Ruby on Rails"), "https://rubyonrails.org/", :target => "_blank", :alt => "Ruby on Rails", :title => "Ruby on Rails" %></div>
      </div>
    </div>

    <div class="col-sm-4" >
      <div class="card" style="min-height: 200px">
        <div class="logo"><%= link_to image_tag("openstreetmap.png", width: "140px", alt: "Open Street Map", title: "Open Street Map"), "https://www.openstreetmap.org/", :target => "_blank", :alt => "Open Street Map", :title => "Open Street Map" %></div>
      </div>
    </div>

    <div class="col-sm-4" >
      <div class="card" style="min-height: 200px">
        <div class="logo"><%= link_to image_tag("leaflet.png", width: "180px", alt: "Leaflet", title: "Leaflet"), "https://leafletjs.com/", :target => "_blank", :alt => "Leaflet", :title => "Leaflet" %></div>
      </div>
    </div>

    <div class="col-sm-4" >
      <div class="card" style="min-height: 200px">
        <div class="logo"><%= link_to image_tag("codeberg.png", width: "140px", alt: "CodeBerg", title: "CodeBerg"), "https://codeberg.org/marcelo-soares-souza/OneMillionVoices", :target => "_blank", :alt => "CodeBerg", :title => "CodeBerg" %></div>
      </div>
    </div>

    <div class="col-sm-4" >
      <div class="card" style="min-height: 200px">
        <div class="logo"><%= link_to image_tag("storyset.png", width: "140px", alt: "StorySet", title: "StorySet"), "https://storyset.com/web", :target => "_blank", :alt => "StorySet", :title => "StorySet" %></div>
      </div>
    </div>
  </div>
</div>