<% if params[:practice_id] %>
  <% title t(:gallery) + " #{@practice.name}" %>
<% end %>

<% if account_signed_in? %>
  <% if params[:location_id] %>
    <%= link_to t(:send_photo), new_location_media_path, :class => "btn btn-warning", :style => "float:right;" if current_account.admin? or @location.account_id == current_account.id %>
  <% end %>
<% end %>


<% if account_signed_in? %>
  <% if params[:practice_id] %>
    <div class="controls">
      <%= link_to t(:send_photo), new_practice_media_path(@practice), :class => "btn btn-warning", :style => "float:right; ; margin-left: 10px;" %>
      <%= link_to t(:send_document), new_practice_document_path(@practice), :class => "btn btn-secondary", :style => "float:right" %>
    </div>
  <% end %>
<% end %>


<br><br><br>

<ul class="nav nav-tabs flex-column flex-xl-row">
  <% if params[:location_id] %>
    <li class="nav-item">
      <%= link_to truncate(@location.name, length: 25), location_path(@location), :class => "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to t(:gallery)+ " (#{@location.medias.count})", location_path(@location), :class => "nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to t(:practices) + " (#{@location.practices.count})", location_practices_path(@location), :class => "nav-link" if @location.practices.count > 0%>
    </li>
  <% end %>

  <% if params[:practice_id] %>
    <li class="nav-item">
      <%= link_to truncate(@practice.location.name, length: 12), location_path(@practice.location), title: @practice.location.name,  :class => "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to @practice.name.truncate(18) , practice_path(@practice), :class => "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to t(:what_you_do), practice_what_you_do_path(@practice, @practice.what_you_do), :class => "nav-link" if @practice.what_you_do %>
    </li>
    <li class="nav-item">
      <%= link_to t(:characterise), practice_characterise_path(@practice, @practice.characterise), :class => "nav-link" if @practice.characterise %>
    </li>
    <li class="nav-item">
      <%= link_to t(:evaluate), practice_evaluate_path(@practice, @practice.evaluate), :class => "nav-link" if @practice.evaluate %>
    </li>
    <li class="nav-item">
      <%= link_to t(:acknowledge), practice_acknowledge_path(@practice, @practice.acknowledge), :class => "nav-link" if @practice.acknowledge %>
    </li>
    <li class="nav-item">
      <%= link_to "#{t(:gallery)} (#{@practice.medias.count})", practice_gallery_path(@practice), :class => "nav-link active", :style => "color: red !important" %>
    </li>
    <li class="nav-item">
      <%= link_to "#{t(:documents)} (#{@practice.documents.count})", practice_documents_path(@practice), :class => "nav-link", :style => "color: red !important" %>
    </li>
  <% end %>
  </li>
</ul>

<% if @medias.empty? %>
  <br><br>

  <h3><%= t(:no_photo_submitted) %>
    <% if account_signed_in? %>
      <% if params[:practice_id] %>
        <%= link_to t(:send_picture), new_practice_media_path(@practice) if current_account.admin? or @practice.account_id == current_account.id %>
      <% end %>
    <% end %>
  </h3>

<% else %>
  <br><br>
  <div class="row">
    <% @medias.each do |media| %>
      <div class="col-sm-6" style="cursor: pointer;" >
        <div class="card" style="max-height: <%= account_signed_in? ? '300px' : '240px'%>;">
          <br>
          <div class="card-img-top thumbnail" >
            <a href="<%= media.photo.url(:original) %>>" data-toggle="lightbox" data-gallery="media-gallery" data-max-width="900">
              <img src="<%= media.photo.url(:medium) %>" alt="Photo <%= media.description %>" title="Photo <%= media.description %>" class="img-fluid">
            </a>
          </div>
          <div class="card-body"  style="min-height: 180px;">
            <% if account_signed_in? %>
              <% if current_account.admin? or media.account.id == current_account.id %>
                <% if params[:location_id] %>
                  <td><%= link_to t(:destroy), location_media_path(media.location, media), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-sm btn-danger' %></td>
                <% elsif params[:practice_id] %>
                  <td><%= link_to t(:destroy), practice_media_path(media.practice, media), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-sm btn-danger' %></td>
                <% end %>
              <% else %>
                <br><br>
              <% end %>
            <% end %>
          </div>
        </div>
        <br>
      </div>
    <% end %>
  </div>

  <div>
    <%= paginate @medias %>
  </div>
  <br>
  <script>
      $(document).on('click', '[data-toggle="lightbox"]', function(event) {
          event.preventDefault();
          $(this).ekkoLightbox();
      });
  </script>
<% end %>
