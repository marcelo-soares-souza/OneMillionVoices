<% title @practice.local.nome %>

<% if usuario_signed_in? %>
  <% if current_usuario.admin? or current_usuario.id == @practice.usuario.id %>
    <%= link_to t(:send_photo), new_practice_midia_path(@practice), :class => "btn btn-warning", :style => "float:right;" %>
  <% end %>
<% end %>

<br><br><br>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to truncate(@practice.local.nome, length: 8), local_path(@practice.local), title: @practice.local.nome,  :class => "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to @practice.name.truncate(10) , practice_path(@practice), :class => "nav-link active" %>
  </li>
  <li class="nav-item">
    <%= link_to t(:what_you_do), practice_what_you_do_path(@practice, @practice.what_you_do), :class => "nav-link" if @practice.what_you_do %>
  </li>
  <li class="nav-item">
    <%= link_to t(:characterise), practice_characterise_path(@practice, @practice.characterise), :class => "nav-link" if @practice.characterise %>
  </li>
  <li class="nav-item">
    <%= link_to t(:evaluate), practice_evaluate_path(@practice, @practice.evaluate), :class => "nav-link" if @practice.evaluate %>
  </li>
  <li class="nav-item">
    <%= link_to t(:acknowledge), practice_acknowledge_path(@practice, @practice.acknowledge), :class => "nav-link" if @practice.acknowledge %>
  </li>
  <li class="nav-item">
    <%= link_to "#{t(:gallery)} (#{@practice.midias.count})", practice_gallery_path(@practice), :class => "nav-link", :style => "color: red !important" %>
  </li>
</ul>

<br>

<div class="tab-content" style="min-height: 64px;">
  <div class="tab-pane active">
    <div  class="thumbnail">
      <% if  @practice.midias and @practice.midias[0]%>
        <%= image_tag(@practice.midias[0].imagem.url(:medium)) %>
      <% else %>
        <%= image_tag(@practice.local.imagem.url(:medium)) %>
      <% end %>
    </div>

    <br>
    <div class='<%= (@practice.name.length() > 90 ? 'text-box' : '') %>'><h1><%= @practice.name %></h1></div>
    <br>
    <%= "<h4>#{t(:location)}</h4>#{link_to @practice.local.nome, local_path(@practice.local)}&nbsp;".html_safe if @practice.local.nome? %>
    <br><br>
    <%= "<h4>#{t(:responsible_for_information)}</h4>#{link_to @practice.usuario.nome, usuario_path(@practice.usuario)}&nbsp;".html_safe if @practice.usuario.nome? %>
    <br>
    <% if usuario_signed_in? %>
      <% if current_usuario.admin? or current_usuario.id == @practice.usuario.id %>
        <br><br>
        <div id="practice-footer">
          <div class="form-actions">
            <%= link_to t(:edit), edit_local_practice_path(@practice.local, @practice.id), :class => 'btn btn-success' %>
            <%= link_to t(:destroy), practice_path(@practice), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem Certeza?')) }, :class => 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    <% end %>

    <br><br>
  </div>
</div>

