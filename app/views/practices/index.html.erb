<% title t(:practices) %>

<br><br><br>

<ul class="nav nav-tabs flex-column flex-sm-row">
  <% if params[:local_id] %>
    <li class="nav-item">
      <%= link_to @local.nome.truncate(25), local_path(@local), title: @local.nome, :class => "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to t(:gallery) + " (#{@local.midias.count})", local_gallery_path(@local.id), :class => "nav-link" %>
    </li>
  <% end %>
  <li class="nav-item">
    <%= link_to t(:practices) + " (#{@practices.count})", "#", :class => "nav-link active" %>
  </li>
</ul>

<% if @practices.empty? %>
  <br>
  <h2><%= t(:no_data_has_been_registered_so_far) %></h2>
<% else %>
  <br>
  <div class="row">
    <% @practices.each do |practice| %>
      <div class="col-sm-6" style="cursor: pointer;" onclick="window.location='<%= local_practice_path(practice.local, practice) %>';">
        <div class="card" style="min-height: 410px;">
          <% if  practice.midias and practice.midias[0]%>
            <div class="card-img-top thumbnail-mini"><%= link_to image_tag(practice.midias[0].imagem.url(:medium)), practice_path(practice), alt: practice.local.nome, title: practice.local.nome %></div>
          <% else %>
            <div class="card-img-top thumbnail-mini"><%= link_to image_tag(practice.local.imagem.url(:medium)), practice_path(practice), alt: practice.local.nome, title: practice.local.nome %></div>
          <% end %>
          <div class="card-body">
            <h3 class="card-title"><%= link_to practice.name, local_practice_path(practice.local, practice) %></h3>
            <%= "<b>Summary</b>".html_safe if practice.what_you_do and practice.what_you_do.summary_description_of_agroecological_practice and practice.what_you_do.summary_description_of_agroecological_practice.length > 0 %>
            <p class="card-text text-box"><%= practice.what_you_do.summary_description_of_agroecological_practice.truncate(160) if practice.what_you_do and practice.what_you_do.summary_description_of_agroecological_practice %></p>
            <p class="card-text" style="text-align: center;">

            <p class="card-text text-box"><b>Location</b>: <%= link_to practice.local.nome.truncate(160), local_path(practice.local) %></p></p>
            <% if usuario_signed_in? %>
              <% if current_usuario.admin? or practice.usuario.id == current_usuario.id %>
                <td><%= link_to t(:edit), edit_practice_path(practice), :class => 'btn btn-sm btn-success' %></td>
                <td><%= link_to t(:destroy), practice_path(practice), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem Certeza?')) }, :class => 'btn btn-sm btn-danger' %></td>
              <% end %>
            <% end %>
          </div>
        </div><br>
      </div>
    <% end %>
  </div>

  <% if not params[:usuario_id] and not params[:local_id] %>
    <div>
      <%= paginate @practices %>
    </div>
  <% end %>
<% end %>
