<% title t(:register_new_practice) %>

<br><br><br>

<ul class="nav nav-tabs flex-column flex-sm-row">
  <li class="nav-item">
    <%= link_to @practice.name.truncate(25), practices_path, :class => "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to "#{t(:edit)}", edit_practice_path(@practice), :class => "nav-link active" %>
  </li>
</ul>
<br>

<% if !@locations.empty? %>
  <%= render 'form', practice: @practice %>
<% else %>
  <br>
  <h3>Nenhum Location Cadastrado. Deseja <%= link_to "Cadastrar um Location Agora?", new_location_url %></h3>
<% end %>
