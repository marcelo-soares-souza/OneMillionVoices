<% title @characterise.practice.name %>

<% if usuario_signed_in? %>
  <% if current_usuario.admin? or current_usuario.id == @characterise.practice.usuario.id %>
    <%= link_to t(:send_photo), new_practice_midia_path(@characterise), :class => "btn btn-warning", :style => "float:right;" %>
  <% end %>
<% end %>

<br><br><br>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to truncate(@characterise.practice.local.nome, length: 8), local_path(@characterise.practice.local), title: @characterise.practice.local.nome,  :class => "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to @characterise.practice.name.truncate(10) , practice_path(@characterise.practice), :class => "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to t(:what_you_do), practice_what_you_do_path(@characterise.practice, @characterise.practice.what_you_do), :class => "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to t(:characterise), practice_characterise_path(@characterise.practice, @characterise.practice.characterise), :class => "nav-link active" %>
  </li>
  <li class="nav-item">
    <%= link_to t(:evaluate), practice_evaluate_path(@characterise.practice, @characterise.practice.evaluate), :class => "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to t(:acknowledge), practice_acknowledge_path(@characterise.practice, @characterise.practice.acknowledge), :class => "nav-link" %>
  </li>
</ul>

<br>

<div class="tab-content" style="min-height: 64px;">
  <div class="tab-pane active">
    <br>
    <% if @characterise.agroecology_principles_addressed.empty? and @characterise.food_system_components_addressed.empty? %>
      <h3><%= t(:no_data_has_been_registered_so_far) %>
        <% if usuario_signed_in? %>
          <% if current_usuario.admin? or current_usuario.id == @characterise.practice.usuario.id %>
            <%= link_to t(:register), edit_practice_characterise_path(@characterise.practice, @characterise) %>
          <% end %>
        <% end %>
      </h3>
    <% else %>
      <%= "<h2>#{t(:agroecology_principles_addressed)}</h2><div class='text-box'>#{simple_format (h @characterise.agroecology_principles_addressed).gsub(URI.regexp, '<a href="\0">\0</a>')}</div>".html_safe if @characterise.agroecology_principles_addressed and @characterise.agroecology_principles_addressed .length() > 0%>
      <br>
      <%= "<h2>#{t(:food_system_components_addressed)}</h2><div class='text-box'>#{simple_format (h @characterise.food_system_components_addressed).gsub(URI.regexp, '<a href="\0">\0</a>')}</div>".html_safe if @characterise.food_system_components_addressed and @characterise.food_system_components_addressed .length() > 0%>

      <% if usuario_signed_in? %>
        <% if current_usuario.admin? or current_usuario.id == @characterise.practice.usuario.id %>
          <br><br>
          <div id="practice-footer">
            <div class="form-actions">
              <%= link_to t(:edit), edit_practice_characterise_path(@characterise.practice, @characterise), :class => 'btn btn-success' %>
            </div>
          </div>
        <% end %>
      <% end %>
      <br><br>
    <% end %>
  </div>
</div>

