<style>
    main {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .grid-container {
        display: grid;
        grid-template-columns: minmax(0, 1fr) min(1350px, 96%) minmax(0, 1fr);
        max-width: 1080px;
        margin-top: 16px;
        margin-right: auto;
        margin-left: auto;
    }

    .two-columns {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        grid-column: 2;
    }

    .two-columns > * {
        flex: 1;
    }
    .first-column {
        margin-top:auto;
        margin-bottom: auto;
        max-width: 820px;
        padding-top: 64px;
        margin-right: 20px;
    }

    .ilustration-container {
        min-width: min(90%, 300px);
        max-width: 350px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .ilustration-container-img {
        margin-left: auto;
        margin-right: auto;
        max-width: 100%;
        height: auto;
        width: auto;
    }

    .landing-title {
        margin: 0 0 18px 0;
        font-size: 2.9rem;
    }

    .light-text {
        display: block;
        margin-block-start: 1em;
        margin-block-end: 1em;
        margin-inline-start: 0px;
        margin-inline-end: 0px;
        margin-top: 32px;
    }

    .first-column p {
        font-family: verdana, arial, helvetica, sans-serif;
        line-height: 30px;
        font-size: 18px;
    }

    .links {
        font-family: "Helvetica Neue", "Lucida Grande", "Lucida Sans", "Lucida Sans Unicode", sans-serif !important;
        font-size: 21px !important;
        margin-top: 25px;
        display: flex;
    }

    .links a {
        font-family: "Helvetica Neue", "Lucida Grande", "Lucida Sans", "Lucida Sans Unicode", sans-serif !important;
        font-size: 21px !important;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: auto;
        margin-top: auto;
        border: 1px solid;
        padding: 16px;
        border-radius: 18px;
        padding-top: 4px;
        padding-bottom: 4px;

        width: 180px !important;
        min-width: 180px !important;
        max-width: 180px !important;

        height: 90px !important;
        min-height: 90px !important;
        max-height: 90px !important;

        display: flex;
        align-items: center;
        justify-content: center;

    }

    @media all and (max-width: 768px) {
        .grid-container {
            margin-top: -36px;
        }

        .links {
            font-family: "Helvetica Neue", "Lucida Grande", Helvetica, Arial, sans-serif !important;
            font-size: 14px !important;
        }

        .links a {
            font-family: "Helvetica Neue", "Lucida Grande", Helvetica, Arial, sans-serif !important;
            font-size: 14px !important;
            width: 85px !important;
            min-width: 85px !important;
            max-width: 85px !important;
            height: 70px !important;
            min-height: 70px !important;
            max-height: 70px !important;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .ilustration-container-img {
            max-width: 80%;
            max-height: 80%;
        }
    }
</style>
<main>
  <div class="grid-container">
    <div class="two-columns" style="justify-content: center;">
      <div class="first-column">
        <h1><span class="landing-title">One Million Voices <%= t(:of_agroecology )%></span></h1>
        <p class="light-text"><%= t(:landing_page_text) %></p>
        <div>
          <h4 class="links">
            <%= link_to t(:discover_the_map), map_path, style: "color: #d1db61 !important" %>
            <%= link_to t(:register_a_location), new_location_path, style: "color: #175f5e !important" %>
            <%= link_to t(:share_your_practices), practices_path %>
          </h4>
        </div>
        <div>
        <%= link_to image_tag('google-badge.png'), 'https://play.google.com/store/apps/details?id=org.agroecologymap.onemillionvoices' %>
        </div>
      </div>
      <div class="ilustration-container">
        <%= image_tag ("landing/landing.png"), class: "ilustration-container-img", alt: "One Million Voices of Agroecology", text:  "One Million Voices of Agroecology" %>
      </div>
    </div>
  </div>
</main>