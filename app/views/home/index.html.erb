<style>
    main {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .grid-container {
        display: grid;
        grid-template-columns: minmax(0, 1fr) min(1350px, 96%) minmax(0, 1fr);
        max-width: 1080px;
        margin-top: 16px;
        margin-right: auto;
        margin-left: auto;
    }

    .two-columns {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        grid-column: 2;
    }

    .two-columns > * {
        flex: 1;
    }
    .first-column {
        margin-top:auto;
        margin-bottom: auto;
        max-width: 820px;
        padding-top: 64px;
        margin-right: 20px;
    }

    .ilustration-container {
        min-width: min(96%, 315px);
        max-width: 500px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .ilustration-container-img {
        margin-left: auto;
        margin-right: auto;
        max-width: 100%;
        height: auto;
        width: auto;
    }

    .landing-title {
        margin: 0 0 21px 0;
        font-size: 3.2rem;
    }

    .light-text {
        display: block;
        margin-block-start: 1em;
        margin-block-end: 1em;
        margin-inline-start: 0px;
        margin-inline-end: 0px;
        margin-top: 32px;
    }

    .first-column p {
        font-family: verdana, arial, helvetica, sans-serif;
        line-height: 30px;
        font-size: 18px;
    }

    .links {
        margin-top: 25px;
        display: flex;
    }

    .links a {
        margin-left: 8px;
        margin-right: 8px;
        margin-bottom: auto;
        margin-top: auto;
        border: 1px solid;
        padding: 16px;
        border-radius: 18px;
    }

    @media all and (max-width: 768px) {
        .grid-container {
            margin-top: -36px;
        }

        .links {
            font-size: 16px;
        }

    }
</style>
<main>
  <div class="grid-container">
    <div class="two-columns" style="justify-content: center;">
      <div class="first-column">
        <h1 class="landing-title">One Million Voices of Agroecology</h1>
        <p class="light-text">Discover and share valuable resources and knowledge, find agroecological practices near you and connect with a like-minded community. Create a profile, explore, be found.</p>
        <div>
          <h4 class="links">
            <%= link_to "Discover Practices", practices_path %>
            <%= link_to "Share your Practice", new_location_path, style: "color: #90AD34; !important" %>
            <%= link_to "See the Map", map_path, style: "color: #DD7A00FF; !important" %>
          </h4>
        </div>
      </div>
      <div class="ilustration-container">
        <%= image_tag ("landing/landing.png"), class: "ilustration-container-img" %>
      </div>
    </div>
  </div>
</main>