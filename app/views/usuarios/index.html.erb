<% title t(:contributors) %>

<br><br><br>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to t(:contributors), usuarios_path, :class => "nav-link active" %>
  </li>
</ul>

<% if @usuarios.empty? %>
  <br>
  <h3>Nenhum Usuário Registrado</h3>
<% else %>

  <br>
  <div class="row">
    <% @usuarios.each do |usuario| %>
      <div class="col-sm-6" style="cursor: pointer;" onclick="window.location='<%= usuario_path(usuario) %>';">
        <div class="card">
          <br>
          <div  class="card-img-top thumbnail-mini"><%= link_to image_tag(usuario.imagem.url(:medium)), usuario_path(usuario), alt: usuario.nome, title: usuario.nome %></div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to usuario.nome, usuario_path(usuario) %></h5>
            <% if usuario_signed_in? %>
              <% if current_usuario.admin? or usuario.id == current_usuario.id %>
                <td><%= link_to t(:edit), edit_usuario_path(usuario), :class => 'btn btn-sm btn-success' %></td>
                <td><%= link_to t(:destroy), usuario_path(usuario), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-sm btn-danger' if usuario.id != 1 %></td>
              <% else %>
                <br><br>
              <% end %>
            <% end %>
          </div>
        </div><br>
      </div>
    <% end %>
  </div>

  <% if not params[:usuario_id] %>
    <div>
      <%= paginate @usuarios %>
    </div>
  <% end %>
<% end %>
