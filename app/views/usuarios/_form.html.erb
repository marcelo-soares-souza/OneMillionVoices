<%= form_for(usuario, html: { multipart: true }) do |f| %>
  <% button_name = t(:save) %>
  <%= f.submit button_name, class: "btn btn-warning btn-lg", style: "float: right; margin-bottom: 16px;" %>

  <br><br>

  <% if usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(usuario.errors.count, "error") %> encontrado(s):</h2>

      <ul>
        <% usuario.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="forms">
    <div class="form-group row bg-light">
      <%= f.label 'Nome', class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-10">
        <%= f.text_field :nome, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label 'E-Mail', class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row bg-light">
      <%= f.label "Imagem", class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-8">
        <%= f.file_field :imagem, class: "form-control" %>
      </div>
    </div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit t(:save), class: "btn btn-warning btn-lg" %>
  </div>

<% end %>
