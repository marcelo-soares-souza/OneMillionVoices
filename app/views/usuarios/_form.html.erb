<%= form_for(usuario, html: { multipart: true }) do |f| %>
  <br><br>
  <% if usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(usuario.errors.count, "error") %> encontrado(s):</h2>

      <ul>
        <% usuario.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="forms">
    <div class="form-group row bg-light">
      <%= f.label 'Name', class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label 'E-Mail', class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row bg-light">
      <%= f.label t(:about_me), class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-10">
        <%= f.text_area :about, class: "form-control", :rows => "5" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label 'Website', class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-10">
        <%= f.text_field :website, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row bg-light">
      <%= f.label "Imagem", class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-8">
        <%= f.file_field :imagem, class: "form-control" %>
      </div>
    </div>
  </div>
  <hr>
  <div class="actions">
    <%= f.submit t(:save), class: "btn btn-warning btn-lg" %>
  </div>
<% end %>
